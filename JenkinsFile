pipeline {
    agent any

    stages {
    
        stage('Clear') {
            steps { 
               echo 'hello'
                bat '''echo off
                Setlocal EnableDelayedExpansion
                set "_count=0"
                rem count the files
                for /f "tokens=*" %%a in ('dir "D:\\JenkinsHome\\workspace\\PipelineOne\\[REALEASE]" /b /o:d') do @(set /a _count+=1 >nul)
                echo !_count! directories found
                rem delete _count-10 files
                for /f "tokens=*" %%a in ('dir "D:\\JenkinsHome\\workspace\\PipelineOne\\[REALEASE]" /b /o:d') do (
                    set /a _count-=1
                    echo directory !_count! is %%a
                    echo rd /q %%a
                    if "!_count!"=="10" (
                          goto :done
                    )
                  )
                :done
                '''
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
                bat 'build.bat'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
                bat 'deploy.bat'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing '
                bat 'pipelinetest.bat'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
                bat 'release.bat'
            }
        }
    }
}
