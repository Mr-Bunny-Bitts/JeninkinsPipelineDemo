pipeline {
    agent any

    stages {
    
        stage('Clear') {
            steps {
                bat '''@echo off
                for /f %%A in ('dir "D:\\JenkinsHome\\workspace\\PipelineOne\\[REALEASE]" /a-d-s-h /b ^| find /v /c ""') do set cnt=%%A
                
                
                if %cnt%>=9 forfiles /p "D:\\JenkinsHome\\workspace\\PipelineOne\\[REALEASE]" /s /d -2 /c "cmd /c del @file : date >= 2 days >NUL"
                '''
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
                bat 'build.bat'
                
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
                bat 'deploy.bat'
 
            }
        }
        stage('Test') {
            steps {
                echo 'Testing '
                bat 'test.bat'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
                 bat 'release.bat'
             
                
            }
        }
    }
}
