pipeline {
    agent any

    stages {
    
        stage('Clear') {
            steps {
                bat '''for /f "skip=10 eol=: delims=" %%F in ('dir /b /o-d *.zip') do @del "%%F" '''
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
                bat 'build.bat'
                
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
                bat 'deploy.bat'
 
            }
        }
        stage('Test') {
            steps {
                echo 'Testing '
                bat 'test.bat'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
                 bat 'release.bat'
             
                
            }
        }
    }
}
